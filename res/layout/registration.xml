<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100" 
    android:background="@drawable/todo_background"
     >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="20" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

         	 <LinearLayout
            	android:layout_width="match_parent"
            	android:layout_height="match_parent"
            	android:orientation="horizontal" >
            	<TextView
                	android:id="@+id/tvRegName"
                	android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
              		android:textColor="#000000"
                	android:text="Name: (First, Last)" />
                <TextView
                	android:id="@+id/tvRegNameSTATUS"
                	android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
              		android:textColor="#ff0b0b"
              		android:textSize="12dp" />  
                	 </LinearLayout>
          
            <EditText
                android:id="@+id/evRegName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName" >

                <requestFocus />
            </EditText>

         	 <LinearLayout
            	android:layout_width="match_parent"
            	android:layout_height="match_parent"
            	android:orientation="horizontal" >            
            	<TextView
                	android:id="@+id/tvUserName"
                	android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                	android:textColor="#000000"
                	android:text="Username:" />
            	<TextView
                	android:id="@+id/tvUserNameSTATUS"
                	android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
              		android:textColor="#ff0b0b"
              		android:textSize="12dp" />  
            	</LinearLayout>
            	
            	
            <EditText
                android:id="@+id/evUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"/>"
                
         	 <LinearLayout
            	android:layout_width="match_parent"
            	android:layout_height="match_parent"
            	android:orientation="horizontal" >
            	<TextView
                	android:id="@+id/tvPassword"
                	android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                	android:textColor="#000000"
               	 	android:text="Password:" />
            	<TextView
                	android:id="@+id/tvPasswordSTATUS"
                	android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
              		android:textColor="#ff0b0b"
             		android:textSize="12dp" />  
            	</LinearLayout>
            	
            <EditText
                android:id="@+id/evPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword" />
         	
            <TextView
                android:id="@+id/tvConfirmPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Confirm Password:" />

            <EditText
                android:id="@+id/evConfirmPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword" />

         	 <LinearLayout
            	android:layout_width="match_parent"
            	android:layout_height="match_parent"
            	android:orientation="horizontal" >            
            	<TextView
                	android:id="@+id/tvEmail"
                	android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                	android:textColor="#000000"
                	android:text="User Email:" />
            	<TextView
                	android:id="@+id/tvEmailSTATUS"
                	android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
              		android:textColor="#ff0b0b"
             		android:textSize="12dp" />  
            	</LinearLayout>           	

            <EditText
                android:id="@+id/evEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >
        <Button
            android:id="@+id/cancelReg"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:text="Cancel"
            android:layout_weight="40" />

        <Button
            android:id="@+id/register"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:text="Register"
            android:layout_weight="40" />

    </LinearLayout>

</LinearLayout>